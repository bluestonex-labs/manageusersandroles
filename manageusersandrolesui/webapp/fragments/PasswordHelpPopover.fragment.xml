<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<Popover
		id="passwdHelpPopover"
        showHeader="false"
		placement="Top"
        afterClose="clearPopoverFlds"
        focus="">
        <VBox>
            <Text text="Your password must:"/>
            <CheckBox id="pswdCharLen_cBox" enabled="false" text="be at least 8 characters long and include three of the following:" selected="false" />
            <CheckBox id="pswdUpperCase_cBox" enabled="false" text="Uppercase letters" selected="false" />
            <CheckBox id="pswdLowerCase_cBox" enabled="false" text="Lowercase Letters" selected="false" />
            <CheckBox id="pswdNumber_cBox" enabled="false" text="Numbers" selected="false" />
            <CheckBox id="pswdSymbol_cBox" enabled="false" text="Symbols" selected="false" />
        </VBox>
	</Popover>
</core:FragmentDefinition>